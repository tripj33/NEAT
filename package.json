{
  "scripts": {
    "start": "npm-run-all --parallel css eleventy",
    "eleventy": "eleventy --watch --serve",
    "debug": "set DEBUG=* & eleventy",
    "watch:css": "watch \"npm run css\" ./src",
    "css": "postcss --verbose src/static/css/tailwind.css --o _site/static/css/style.css --watch",
    "watch": "nodemon --watch ./src --ext css --exec npm run css",
    "build": "cross-env NODE_ENV=production eleventy &&npm cross-env NODE_ENV=production postcss src/static/css/tailwind.css --o _site/static/css/style.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@tailwindcss/typography": "^0.3.1",
    "alpinejs": "^2.6.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "js-yaml": "^3.14.0",
    "luxon": "^1.25.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prismjs": "^1.21.0",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "autoprefixer": "^10.1.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.1",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.3",
    "watch": "^1.0.2"
  }
}
